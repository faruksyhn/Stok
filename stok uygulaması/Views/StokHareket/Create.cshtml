@model stok_uygulaması.Models.tbl_StokHareket

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_layout.cshtml";
}

<h2>Stok Hareketi oluştur</h2>
<h3 style="color: blue;">@ViewBag.Hata</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.stokID, "Ürün adı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("stokID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.stokID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.alinanAdet, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.alinanAdet, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.alinanAdet, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Tarih</label><br /><br />
                <input type="datetime-local" id="tarih" name="tarih">
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tamamla" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Listeye geri dön", "Index")
    </div>
